
@model List<string>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hjemmeside</title>
    <script src="~/scripts/jquery-3.1.1.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
    <link href="~/Content/innlogget_bootstrap.css" rel="stylesheet" type="text/css">

    <script type="text/javascript">
        function printUtskrift()
        {
            $("#transaksjonsListe").load("/Kunde/hentTransaksjoner", { kontonavn: $("#kontoDropdown").val(), personnr: @ViewBag.personnr });
        }
    </script>
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <img src="~/Content/images/nettbanken.png" width="200px">
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="jumbotron">
            <h1>Konto Oversikt</h1>
            <p>Velg konto:</p>

            <div class="container">

                <div class="row">
                    <div class="row">
                        <select id="kontoDropdown">
                            @foreach (var konto in Model)
                            {
                                <option>@konto</option>
                            }
                        </select>
                    </div>
                </div>
                <br/>
                <div class="container">
                    <p>
                        <input type="button" class="btn btn-primary" value="Utskrift" onclick="printUtskrift()"/>
                        <input type="button" class="btn btn-primary" value="Transaksjoner" onclick="location.href='@Url.Action("transaksjonView","Kunde")'" />
                    </p>
                    <p>
                        <input type="button" class="btn btn-primary" value="Logg ut" onclick="location.href='@Url.Action("loggUt","Kunde")'" />
                    </p>
                </div>

                <div id="transaksjonsListe">
                    <!--Her kommer utskriftstabellen-->
                </div>

            </div>
        </div>
    </div>

    <footer class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <p>Copyright Â© Nettbanken. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>