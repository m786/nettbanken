@model List<Nettbanken.Models.Kunde>

<html>
<head>
    <title>Nettbanken</title>
    <link href="~/Content/forside_bootstrap1.css" rel="stylesheet">
    <link href="~/Content/AdminView.css" rel="stylesheet">
</head>

<body>
    
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <img src="~/Content/images/nettbanken.png" width="200px">
            </div>
        </div>
        <!-- /bar end -->
        </div>
        <!-- /.container end -->
    </nav>

    <div id="panel">

        <div class="header">
            <div class="title"><a>Administrator</a></div>
        </div>

        <div class="Gull_farge">
            <ul></ul>
        </div>

        <div id="høyre_side">
            <div id="høyre_content">
                <h1 style="margin-top:2%;">Kunder</h1>


                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model[0].personNr)
                           
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].fornavn)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].etternavn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].adresse)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].postNr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model[0].poststed)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.personNr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fornavn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.etternavn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.adresse)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postNr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.poststed)
                            </td>
                            <td>
                                @Html.ActionLink("Endre", "endreView", new { idnr = item.personNr }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Info", "infoView", new { idnr = item.personNr }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Slette", "slettView", new { idnr = item.personNr }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
                @Html.ActionLink("Registrer ny Kunde", "registrerViaAdmin", new { tom = "" }, new { @class = "btn btn-success" })
                <input type="button" class="btn btn-danger" value="Logg ut" onclick="location.href='@Url.Action("loggUt","Kunde")'" />
                <div class="knapper_under_panel">
                </div>


            </div>
        </div><!-- end of right content-->


        <div class="clear"></div>
    </div> <!--end of center_content-->
</body>
</html>