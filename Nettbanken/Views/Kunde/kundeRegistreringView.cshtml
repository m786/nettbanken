@model Nettbanken.Models.Kunde

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/logginn_register.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <!--BeginForm har parameterene (metodenavn, kontrollernavn, postmethod)-->
        @using (Html.BeginForm("kundeRegistreringView", "Kunde", FormMethod.Post))
        {
            //@Html.AntiForgeryToken()
            //@Html.ValidationSummary(true)

            <div class="row">
                <div class="header">
                    <div class="header-container">
                        <img src="images/nettbanken.png" class="logo"></a>
                    </div>

                    <div class="logginn-container">
                        <a><b>PersonNr:</a>
                        <br>
                        <input type="text" name="PersonNr">
                        <br>
                        <br>
                        <a>Passord:</a>
                        <br>
                        <input type="text" name="Passord">
                        <br>
                        <br>
                        <a>Fornavn:</a>
                        <br>
                        <input type="text" name="Fornavn">
                        <br>
                        <br>
                        <a>Etternavn:</a>
                        <br>
                        <input type="text" name="Etternavn">
                        <br>
                        <br>
                        <a>Adresse:</a>
                        <br>
                        <input type="text" name="Adresse">
                        <br>
                        <br>
                        <a>TelefonNr:</b></a>
                        <br>
                        <input type="text" name="TelefonNr">
                        <br>
                        <br>
                        <input type="submit" value="Register" />

                        <input type="submit" value="Tilbake" style="margin-left:50px;" />
                    </div>
                    <div class="footer-container">
                    </div>
                </div>


                <fieldset>
                    <legend>Kunde Registrering</legend>

                    <div class="editor-lable">
                        @Html.LabelFor(model => model.personNr)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.personNr)
                    </div>
                    <div class="editor-lable">
                        @Html.LabelFor(model => model.passord)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(model => model.passord)
                    </div>
                    <div class="editor-lable">
                        @Html.LabelFor(model => model.fornavn)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.fornavn)
                    </div>
                    <div class="editor-lable">
                        @Html.LabelFor(model => model.etternavn)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.etternavn)
                    </div>
                    <div class="editor-lable">
                        @Html.LabelFor(model => model.adresse)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.adresse)
                    </div>
                    <div class="editor-lable">
                        @Html.LabelFor(model => model.telefonNr)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.telefonNr)
                    </div>
                    <!--Spesial tilfelle her. Vi trenger kun å kalle på Poststed klassen
                         for å få både label og editor field for postnr og poststed-->
                    <div class="editor-field">
                        @Html.EditorFor(model => model.poststed)
                    </div>

                    <div>
                        <input type="submit" value="Registrer" />
                    </div>
                </fieldset>
        }

        <div>
            @Html.ActionLink("Tilbake til forside", "forsideView")
        </div>

</body>
</html>