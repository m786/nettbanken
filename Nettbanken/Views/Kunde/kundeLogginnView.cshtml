
@model Nettbanken.Models.Kunde
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/logginn_register.css" rel="stylesheet" type="text/css">
    </head>

    <body>
        @using (Html.BeginForm("kundeLogginnView", "Kunde", FormMethod.Post))
        {
            <fieldset>
                <div class="row">
                    <div class="header">
                        <div class="header-container">
                            <img src="~/Content/images/nettbanken.png" class="logo">
                        </div>

                        <div class="logginn-container">

                            <div class="editor-lable">
                                @Html.LabelFor(model => model.bankId)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.bankId)
                                <span>BankID = 1337</span>
                            </div>
                            <div class="editor-lable">
                                @Html.LabelFor(model => model.personNr)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.personNr)
                            </div>
                            <div class="editor-lable">
                                @Html.LabelFor(model => model.passord)
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(model => model.passord)
                            </div>

                            <br/>
                            <div>
                                <input type="submit" value="Logg inn" />
                            </div>

                         </div>

                            <div class="footer-container">
                                <div>
                                    @Html.ActionLink("Tilbake til forside", "forsideView")
                                </div>
                            </div>
                        </div>
                    </div>
             </fieldset>
        }
    </body>

</html>
