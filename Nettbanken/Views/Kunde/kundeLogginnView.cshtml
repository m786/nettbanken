
@model Nettbanken.Models.Kunde

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Kunde Logginn</title>
        <link href="~/Content/logginn_register.css" rel="stylesheet" type="text/css">


    </head>

    <body>
        @using (Html.BeginForm("kundeLogginnView", "Kunde", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="row">
                    <div class="header">
                        <div class="header-container">
                            <img src="~/Content/images/nettbanken.png" class="logo">
                        </div>

                        <div class="logginn-container">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="editor-lable">
                                @Html.LabelFor(model => model.bankId)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.bankId)
                                @Html.ValidationMessageFor(model => model.bankId, "", new { @class = "text-danger" })
                            </div>
                            <div class="editor-lable">
                                @Html.LabelFor(model => model.personNr)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.personNr)
                                @Html.ValidationMessageFor(model => model.personNr, "", new { @class = "text-danger" })
                            </div>
                            <div class="editor-lable">
                                @Html.LabelFor(model => model.passord)
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(model => model.passord)
                                @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                            </div>
                            <br/>
                            <div>
                                <button class="form-btn" type="submit" value="Logg inn">Logg inn</button>
                            </div>
                            <br/>
                            <p>Per Bakke</p>
                            <p>Bank ID = 1</p>
                            <p>Personnummer = 118921160<p/>
                            <p>Passord = passord</p>

                         </div>

                            <div class="footer-container">
                                <div>
                                    @Html.ActionLink("Tilbake til forside", "forsideView")
                                </div>
                            </div>
                        </div>
                    </div>
             </fieldset>
        }
    </body>

</html>
